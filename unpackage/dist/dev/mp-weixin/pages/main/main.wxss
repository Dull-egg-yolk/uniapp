
page {
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	background-color: #efeff4;
	min-height: 100%;
	height: auto;
}
view {
	font-size: 28rpx;
	line-height: inherit;
}
.content {
	padding: 0;
}
.content-control {
	padding: 5rpx;
	padding-bottom: 0;
	width: auto;
}
.current-content {
	justify-content: center;
	align-items: center;
	text-align: left;
}
.button-box {
	display: flex;
	justify-content: space-between;
	padding-top: 1vw;
}
.delete {
	width: 90rpx;
	color: red;
}
.edit {
	padding-top: 3rpx;
	color: blue;
	width: 90rpx;
}
.detail {
	width: 90rpx;
}
.commit {
	width: 90rpx;
	color: green;
}
.input-view {
	align-items: center;
	justify-content: center;
	width: 100%;
	display: flex;
	background-color: #e7e7e7;
	height: 30px;
	border-radius: 15px;
	padding: 0 4%;
	flex-wrap: nowrap;
	margin: 7px 10rpx;
	line-height: 30px;
	background: #f5f5f5;
}
.input-view .input {
	height: 30px;
	line-height: 30px;
	width: 94%;
	padding: 0 3%;
}
.modelBox {
	display: inline-flex;
	flex-direction: row;
	justify-content: space-between;
	height: 50rpx;
	width: 220rpx;
	position: relative
}
.shade{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 100;
	background-color: rgba(0,0,0,.6);
}
.model{
	width: 80%;
	border-radius: 35rpx;
	background-color: #fff;
	padding: 30rpx;
	box-sizing: border-box;
	position: fixed;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	z-index: 200;
}
.modelTitle{
	font-size: 34rpx;
	color: #333;
	margin-bottom: 20rpx;
}
.modelInput{
	width: 100%;
	height: 40rpx;
	font-size: 30rpx;
	color: #333;
	margin-bottom: 40rpx;
}
.modelInput input{
	width: 100%;
	height: 100%;
	border: none;
	border-bottom:2rpx solid #8fba5d;
}
.modeBtnBox{
	width: 100%;
	height: 40rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	color:#8fba5d ;
	font-size: 30rpx;
}
.modeBtnBox view{
	width: 25%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}


