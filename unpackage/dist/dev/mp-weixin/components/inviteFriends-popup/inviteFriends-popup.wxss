         backdrop-filter: blur(2px);
}
/* 弹窗容器 */
.popup-container.data-v-3aa6fcdc {
 position: fixed;
 left: 0;
 right: 0;
 bottom: -100%;
 background: #fff;
 border-radius: 24rpx 24rpx 0 0;
 transition: all 0.3s ease;
 max-height: 70vh;
 display: flex;
 flex-direction: column;
}
.popup-show.data-v-3aa6fcdc {
